{
    "name": "sharedserver",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "start": "node ./bin/www",
        "test": "mocha ./test/AuthTest.js",
	"cover": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec ./test/AuthTest.js && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
        "test-travis": "./node_modules/istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha -- -R spec ./test/AuthTest.js"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "bluebird": "^3.5.1",
        "body-parser": "^1.18.3",
        "cookie-parser": "~1.4.3",
        "debug": "~2.6.9",
        "express": "~4.16.0",
        "http-errors": "~1.6.2",
        "jsonwebtoken": "^8.3.0",
        "morgan": "~1.9.0",
        "pg-promise": "^5.9.7",
        "pug": "2.0.0-beta11"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.1",
        "chai": "^4.1.2",
        "chai-http": "^4.2.0",
        "coveralls": "^3.0.2",
        "eslint": "^5.6.1",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-node": "^7.0.1",
        "eslint-plugin-promise": "^4.0.1",
        "eslint-plugin-standard": "^4.0.0",
        "istanbul": "^0.4.4",
        "istanbul-coveralls": "^1.0.3",
        "jasmine": "^3.2.0",
        "jasmine-console-reporter": "^3.1.0",
        "jasmine-node": "^1.16.2",
        "jasmine-supertest": "^1.0.0",
        "mocha": "^5.2.0",
        "supertest": "^3.3.0"
    },
    "eslintConfig": {
        "extends": "airbnb-base",
        "env": {
            "es6": true,
            "browser": true
        },
        "rules": {
            "brace-style": [
                "error",
                "stroustrup"
            ],
            "comma-dangle": [
                "error",
                "never"
            ],
            "no-unused-vars": [
                "warn"
            ],
            "no-var": [
                "off"
            ],
            "one-var": [
                "off"
            ]
        }
    }
}
